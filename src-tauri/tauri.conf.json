{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NI-DAQmxAudioPlayer",
  "version": "0.3.2",
  "identifier": "is.cnp.nidaq-audioplayer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "NI-DAQmx Audio Player",
        "width": 800,
        "height": 600,
        "minWidth": 380,
        "minHeight": 240,
        "decorations": false,
				"visible": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost ws://localhost:* wss://localhost:*",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "script-src": "'self' 'wasm-unsafe-eval'",
        "object-src": "'self'",
        "media-src": "'self' asset: http://asset.localhost blob: data:"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../src-python/*": "src-python",
      "../src-python/src/": "src-python/src"
    }
  }
}
